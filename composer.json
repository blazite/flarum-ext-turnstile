{
    "name": "blazite/flarum-turnstile",
    "description": "Implement Cloudflare Turnstile into your Flarum forum.",
    "keywords": [
        "flarum",
        "captcha",
        "cloudflare",
        "turnstile"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/blazite/flarum-ext-turnstile/issues",
        "source": "https://github.com/blazite/flarum-ext-turnstile",
        "forum": "https://discuss.flarum.org/"
    },
    "homepage": "https://blazite.com",
    "require": {
        "flarum/core": "^1.8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "authors": [
        {
            "name": "Blazite",
            "email": "tomas@blazite.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Blazite\\Turnstile\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Turnstile",
            "category": "feature",
            "icon": {
                "image": "resources/assets/Cloudflare_Turnstile_logo.svg",
                "backgroundColor": "#ffffff",
                "backgroundSize": "80%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": true,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
